{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Angular in Chrome",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "trace": false,
      "runtimeArgs": [
        "--remote-debugging-port=9222",
        "--disable-infobars"
      ]
    },
    {
      "name": "Attach to Running Chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true
    },
    {
      "name": "Debug Angular Tests",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: test",
      "url": "http://localhost:9876/debug.html",
      "webRoot": "${workspaceFolder}/src"
    }
  ]
}
